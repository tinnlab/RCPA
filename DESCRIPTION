Package: RCPA
Type: Package
Title: Consensus Pathway Analysis
Version: 0.1.0
Authors@R: c(
    person(given = "Zeynab", family = "Maghsoudi", email = "zmaghsoudi@nevada.unr.edu", role = c("aut", "cre")),
